<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.woori.wooribat.mapper.auth.AuthMapper">

	<insert id="signup" parameterType="com.woori.wooribat.model.dto.auth.SignupRequestDto">
		INSERT INTO farm.users (email, password, name)
		VALUES (#{email}, #{password}, #{name})
	</insert>
	
	<select id="login" parameterType="com.woori.wooribat.model.dto.auth.LoginRequestDto">
		SELECT email, password
		FROM farm.users
	</select>


</mapper>